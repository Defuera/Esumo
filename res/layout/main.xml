<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
<TextView  
    android:layout_height="wrap_content" 
    android:text="ESumo. JustGames!" 
    android:layout_width="wrap_content" 
    android:layout_gravity="center"/>
    
    
    <Button android:id="@+id/play" 
    	android:textStyle="bold" 
    	android:text="Play" 
    	android:layout_height="50sp" 
    	android:layout_width="100sp" 
    	android:layout_gravity="center"  	
    	android:background="#aacccc"
    	android:shadowRadius="20"
    	android:shadowColor="#000000">
    </Button>
    <Button android:id="@+id/exit" 
    	android:textStyle="bold" 
    	android:text="Exit" 
    	android:layout_height="50sp" 
    	android:layout_width="100sp" 
    	android:layout_gravity="center" >
    </Button>
    <Button android:text="Rate us!" 
    android:id="@+id/rate" 
    android:layout_width="100sp" 
    android:textStyle="bold" 
    android:layout_gravity="center" 
    android:layout_height="50sp">
    </Button>
</LinearLayout>
